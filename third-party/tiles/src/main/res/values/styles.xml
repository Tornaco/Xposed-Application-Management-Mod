<resources>

    <style name="TextAppearance.Medium" parent="@style/TextAppearance.AppCompat.Medium" />

    <style name="TextAppearance.Small" parent="@style/TextAppearance.AppCompat.Small" />

    <style name="TextAppearance.Switch" parent="TextAppearance.Medium" />

    <style name="TextAppearance.CategoryTitle" parent="TextAppearance.Small">
        <!--<item name="android:textColor">?colorAccent</item>-->
    </style>

    <style name="TextAppearance.TileTitle" parent="TextAppearance.Medium">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/dashboard_tile_text_size</item>
    </style>

    <style name="TextAppearance.TileSubTitle" parent="TextAppearance.Small">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Material_Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryDark</item>
        <item name="colorButtonNormal">?attr/colorPrimary</item>
        <item name="colorAccent">?attr/colorPrimaryDark</item>
    </style>

    <style name="Material_Dialog.EditText">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.Small.SwitchBar">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!-- Used to color the switch bar controls -->
    <style name="ThemeOverlay.SwitchBar" parent="ThemeOverlay.AppCompat">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="ButtonBar" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="colorButtonNormal">?attr/colorAccent</item>
    </style>

    <style name="ActionArea" parent="Theme.AppCompat.Light">
        <!-- Used by controls, e.g. CheckBox, ProgressBar, etc. -->
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="CategoryCard">
        <item name="cardBackgroundColor">?torTileContainerBackgroundColor</item>
    </style>
</resources>
